    ViewBag.Title = "Başvuru Formu";
}
<h1 class="h4 text-center">Toplantı Katılım Formu</h1>
<form method="post" action="/Meeting/Apply" novalidate>
    <div asp-validation-summary="All"></div><!--Required yani eğer o alan büşsa hata mesajı için
    css kodlarını ise wwwrootaltında css/styles.css içinde
    -->
    <div class="mb-3">
        <!--
            <label for="Name" class="for-label">Ad Soyad</label>
            <input type="text" name="Name" id="Name" class="form-control">
             burada ki for yerine taghelper metotlarını kullanıp direk bilgileri alıcam

             meetngcontrollerda eklediğim post ile almak yerine taghelper kullandım
             [HttpPost] //formdan aldığım bilgileri tekrardan alıp kullanmak için
            public IActionResult Apply(string Name, string Phone, string Email, bool WillAttend){//toplantıya katılım formu
