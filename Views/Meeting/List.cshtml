@model List<UserInfo>
@{
    ViewBag.Title = "Toplantı Katılım Listesi";
}
<main class="text-center">
    <h1 class="h4">Toplantı Katılım Listesi</h1>
    <table class="table table-bordered">
        <thead>
            <tr>
                <td>Ad-Soyad</td>
                <td>Katılım Durumu</td>
                <td></td>
            </tr>
        </thead>
        <tbody>

            @{int i = 0; } <!--katılımcı sayısını tutmak için-->

            @foreach(var user in Model){

                var durum = user.WillAttend == true ? "Evet":"Hayır";

                var clasName = user.WillAttend == true ? "table-success":"table-danger";

                if(user.WillAttend == true){
                    i++;
                }

                <tr class="@clasName">
                    <td>@user.Name</td>
                    <td>@durum</td>
                    <td>
                        <a class="btn btn-sm btn-primary" href="/meeting/details/@user.Id">Detay</a>
                    </td>
                </tr>
            }
            
        </tbody>
    </table>

    <div class="card">
        <div class="card-body">
            <span>Katılımcı Sayısı: @i</span>
        </div>
    </div>
</main>