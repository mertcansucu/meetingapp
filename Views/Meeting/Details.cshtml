@model UserInfo

@{
    ViewBag.Title = "Başvuru Detayı";
}

@{
    var clasName = @Model.WillAttend == true ? "primary":"danger";
}

<main class="text-center">
    <h1>Başvuru Detayı</h1>
    <p>
        <span class="badge text-bg-@clasName">
            @if(Model.WillAttend == true){
                <text>Katılıyor</text>
            }else{
                <text>Katılmıyor</text>
            }
        </span>
    </p>
    <p>İsim: @Model.Name</p>
    <p>Email: @Model.Email</p>
    <p>Telefon: @Model.Phone</p>
    <a asp-controller="Meeting" asp-action="List" class="btn btn-outline-@clasName">Katılımcı Listesi</a>
</main>